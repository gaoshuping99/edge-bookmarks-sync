{
  "manifest_version": 3,
  "name": "Edge同步助手",
  "version": "1.0.0",
  "description": "将Edge浏览器的收藏夹、账号、密码同步到当前浏览器",
  "permissions": [
    "bookmarks",
    "passwords",
    "storage",
    "identity",
    "notifications",
    "tabs",
    "activeTab",
    "passwordsPrivate"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 